<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/img_sea">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_34"
        android:gravity="center_horizontal"
        app:fontFamily="@font/san_francisco_sf_bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/vertical_24"
        android:layout_marginStart="@dimen/horizontal_24"
        android:layout_marginEnd="@dimen/horizontal_24">

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20"
        android:textAllCaps="false"
        android:text="@string/start_game"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_blue"
        app:fontFamily="@font/san_francisco_sf_regular"/>

    <Button
        android:id="@+id/quit_button"
        android:layout_marginTop="@dimen/vertical_12"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20"
        android:textAllCaps="false"
        android:text="@string/quit"
        android:textColor="@color/white"
        android:background="@drawable/bg_button_blue"
        app:fontFamily="@font/san_francisco_sf_regular"/>
    </LinearLayout>
</LinearLayout>